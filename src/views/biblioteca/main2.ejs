<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../public/estilos.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <h1 class="prueba">CRUD </h1> 
      </nav>
      <div class="container-md">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">NOMBRE</th>
                <th scope="col">AUTOR</th>
                <th scope="col">AÑO</th>
                <th scope="col">ACCION</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<cliente.length; i++){%>
              <tr>
                <td><%= cliente[i].id %></td>
                <td><%= cliente[i].nombre %></td>
                <td><%= cliente[i].autor %></td>
                <td><%= cliente[i].año %></td>
                <td>
                    <a href="/editar/<%= cliente[i].id %>" class="btn btn-primary">Editar</a>
                    <a href="/eliminar/<%= cliente[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
              <%}%>
            </tbody>
          </table>
          <form action="/agregar" method="POST">
            <div class="form-group">
                <label for="floatingSelect">NOMBRE</label>
              <input type="text" name="nombre" placeholder="ingrese nombre" class="form-control" autofocus>
            </div><br>
            <div class="form-group">
                <label for="floatingSelect">AUTOR</label>
              <input type="text" name="autor" placeholder="autor" class="form-control">
            </div><br>
            <div class="form-group">
                <label for="floatingSelect">AÑO</label>
              <input type="text" name="año" placeholder="año" class="form-control">
            </div>
  
            <button type="submit" class="btn btn-primary">
              REGISTRAR
            </button>
          </form>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>